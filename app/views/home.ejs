<html>

<head>
    <title></title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
</head>

<body>
    <div class="row">
        <nav>
            <div class="nav-wrapper">
                <a href="#" class="brand-logo">Library System</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a href="/logout">Logout</a></li>

                </ul>
            </div>
        </nav>
    </div>


    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s4" id="search"><a class="active" href="#test1">Search</a></li>
                <li class="tab col s4" id="borrow"><a href="#test2">Borrow</a></li>

                <li class="tab col s4" id="return"><a href="#test4">Return</a></li>
            </ul>
        </div>
        <% if(error=='Maxbooks') { %>
            <div class="row center">
                <h4>
                    You have borrowed 3 books.
                </h4>
            </div>
            <% } 
                 else if(error=='iderror') { %>
                <div class="row center">
                    <h4>
                        Library Id Error
                    </h4>
                </div>
                <% } else if(error=='alreadytaken') { %>
                    <div class="row center">
                        <h4>
                            Already borrowed
                        </h4>
                    </div>
                    <% } else if(error=='booknotfound'){ %>
                        <div class="row center">
                            <h4>
                                Book not found
                            </h4>
                        </div>
                        <% }  else if(error=='bnb'){ %>
                            <div class="row center">
                                <h4>
                                    Book not borrowed
                                </h4>
                            </div>
                            <% } %>


                                <div id="test1">
                                    <form action="/search" method="POST" class="center">

                                        <div class="row">
                                            <div class="col s12 m4"></div>
                                            <div class="col s12 m4">
                                                <div class="input-field ">
                                                    <input placeholder="Book name" id="text" type="text" name="bookname" class="validate">
                                                    <label for="first_name">Book</label>
                                                </div>
                                            </div>
                                            <div class="col s12 m4"></div>

                                        </div>



                                        <button type="submit" class="btn waves-effect waves-light">Search</button>

                                    </form>
                                </div>
                                <div id="test2" class="col s12">

                                    <form action="/loggedin/borrow" method="POST" class="center">

                                        <div class="row">
                                            <div class="col s12 m4"></div>
                                            <div class="col s12 m4">
                                                <div class="input-field ">
                                                    <input placeholder="Book name" id="text" type="text" name="book_name" class="validate">
                                                    <label for="book_name">Book Name</label>
                                                </div>
                                                <div class="input-field ">
                                                    <input placeholder="Book ID" id="text" type="text" name="id" class="validate">
                                                    <label for="book_id">Book ID</label>
                                                </div>
                                                <div class="input-field ">
                                                    <input placeholder="Library ID" id="text" type="text" name="libraryid" class="validate">
                                                    <label for="libraryid">Library ID</label>
                                                </div>

                                            </div>
                                            <div class="col s12 m4"></div>

                                        </div>



                                        <button type="submit" class="btn waves-effect waves-light">Borrow</button>

                                    </form>
                                </div>

                                <div id="test4" class="col s12">

                                    <form action="/loggedin/return" method="POST" class="center">

                                        <div class="row">
                                            <div class="col s12 m4"></div>
                                            <div class="col s12 m4">

                                                <div class="input-field ">
                                                    <input placeholder="Book ID" id="text" type="text" name="returnid" class="validate">
                                                    <label for="book_id">Book ID</label>
                                                </div>
                                                <div class="input-field ">
                                                    <input placeholder="Library ID" id="text" type="text" name="returnlibraryid" class="validate">
                                                    <label for="libraryid">Library ID</label>
                                                </div>

                                            </div>
                                            <div class="col s12 m4"></div>

                                        </div>



                                        <button type="submit" class="btn waves-effect waves-light">Return</button>

                                    </form>

                                </div>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>

    <script>
        var instance = M.Tabs.init(el, options);
    </script>
</body>

</html>